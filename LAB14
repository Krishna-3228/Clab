//lab14.1
/*WAP to multiply two numbers using pointers.*/
#include<stdio.h>

int main(){
    int a,b;
    printf("Enter two numbers : ");
    scanf("%d%d",&a, &b);
    int *p = &a;
    int *q = &b;
    int c = (*p)*(*q);
    printf("Product of %d and %d = %d\n",a,b,c);
    return 0;
}

//lab14.2
/*WAP to swap three numbers in cyclic order using Call by Reference.*/
#include<stdio.h>

void swap(int *x,int *y,int *z){
    int t=*y;
    *y=*x;
    *x=*z;
    *z=t;
}
int main(){
    int a,b,c;
    printf("Enter three numbers:\n");
    scanf("%d%d%d",&a,&b,&c);
    printf("Before swapping the numbers are: a=%d, b=%d, c=%d",a,b,c);
    swap(&a,&b,&c);
    printf("After swapping the numbers are: a=%d, b=%d, c=%d",a,b,c);
    return 0;
}

//lab14.3
/*WAP to compute the sum of all elements in an array using pointer.*/
#include<stdio.h>

int main (){
    int n,sum=0;
    printf("Enter the array size:\n");
    scanf("%d",&n);
    int arr[n];
    printf("Enter the %d elements:\n",n);
    for(int i=0;i<n;i++){
        scanf("%d",arr+i);
    }
    for(int i=0;i<n;i++){
        sum += *(arr+i);
    }
    printf("Sum of elements of array is: %d",sum);
    return 0;
}

//lab14,4
/*WAP to reverse a 1D Array Using Pointers.*/
#include<stdio.h>

int main (){
    int n;
    printf("Enter the array size:\n");
    scanf("%d",&n);
    int arr[n];
    printf("Enter the %d elements:\n",n);
    for(int i=0;i<n;i++){
        scanf("%d",arr+i);
    }
    for(int i=0;i<(n+1)/2;i++){
        int t=*(arr+i);
        *(arr+i)=*(arr+n-1-i);
        *(arr+n-1-i)=t;
    }
    printf("Reverse of array is:\n");
    for(int i=0;i<n;i++){
        printf("%d\t",*(arr+i));
    }
    return 0;
}

//lab14.5
/*WAP to reverse a 1D Array Using Pointers.*/
#include<stdio.h>

int main (){
    int n;
    printf("Enter the array size:\n");
    scanf("%d",&n);
    int arr[n];
    printf("Enter the %d elements:\n",n);
    for(int i=0;i<n;i++){
        scanf("%d",arr+i);
    }
    for(int i=0;i<(n+1)/2;i++){
        int t=*(arr+i);
        *(arr+i)=*(arr+n-1-i);
        *(arr+n-1-i)=t;
    }
    printf("Reverse of array is:\n");
    for(int i=0;i<n;i++){
        printf("%d\t",*(arr+i));
    }
    return 0;
}

//lab14.6
/*WAP to transpose a 2D Matrix Using Pointers.*/
#include<stdio.h>

int main(){
    int m,n;
    printf("Enter the row size:\n");
    scanf("%d",&m);
    printf("Enter the column size:\n");
    scanf("%d",&n);
    int arr[m][n];
    printf("Enter the elements of the matrix (row major order):\n");
    for(int i=0;i<m;i++){
        for(int j=0;j<n;j++){
            scanf("%d",(*(arr+i)+j));
        }
    }
    printf("Given Matrix\n");
    for(int i=0;i<m;i++){
        for(int j=0;j<n;j++){
            printf("%d\t",*(*(arr+i)+j));
        }
        printf("\n");
    }
    for(int i=0;i<m;i++){
        for(int j=i;j<n;j++){
            int t=*(*(arr+i)+j);
            *(*(arr+i)+j)=*(*(arr+j)+i);
            *(*(arr+j)+i)=t;
        }
    }
    printf("Transpose of given array:\n");
    for(int i=0;i<m;i++){
        for(int j=0;j<n;j++){
            printf("%d\t",*(*(arr+i)+j));
        }
        printf("\n");
    }
    return 0;
}
